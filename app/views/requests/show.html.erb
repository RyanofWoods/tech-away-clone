<div class="container-sm mt-5">

  <h2>Seeker request</h2>
  <div class="card mt-3 p-4">
    <div class="row">
      <div class="col d-flex flex-column">
        <div class="flex-grow-1">
          <h3><%= @user.first_name %> needs a <%= @request.category.title.downcase %></h3>
          <p class="mt-3"><%= @user.description %></p>  
        </div>
        <div class="d-flex flex-grow-1 align-items-end">
          <div>
            <%= link_to "Donate to #{@user.first_name}", new_product_path(request_id: @request.id), class: "btn btn-primary mt-3" %> 
          </div>
        </div>
      </div>
      <div class="col">
        <div style="background-image: url(https://picsum.photos/id/237/400/800); background-size: cover; background-repeat: no-repeat; height: 500px;">
        </div>
      </div>
    </div>
  </div>
</div>
