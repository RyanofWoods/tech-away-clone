<div class="container my-4">
<h1> Products I have donated </h1>

<div>
Accepted:
<% @user.products.where(status: "accepted").each do |product| %>
<%= render "product_card", product: product %>
<% end %>
</div>

<div>
Pending:
<% @user.products.where(status: "Pending").each do |product| %>
<%= render "product_card", product: product %>
<% end %>
</div>

<div>
Declined:
<% @user.products.where(status: "declined").each do |product| %>
<%= render "product_card", product: product %>
<% end %>
</div>
