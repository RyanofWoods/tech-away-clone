<div class="container my-5">
  <div class="d-flex pb-5">
    <% if @product.photo.key %>
      <%= cl_image_tag @product.photo.key %>
    <% end %>

    <div class="p-2 pl-4">
      <h2><%= @product.title %></h2>
      <h5><%= @product.condition %></h5>
      <div id="distance-and-time"class="d-flex justify-content-between pb-2">
        <div><%= @product.posted_ago %></div>
      </div>
      <p class="pt-2">Description <%= @product.description %></p>
    </div>
  </div>

   <h4 class="mb-4"><%= @product.address %></h4>
   <!-- Map with markers -->
   <div id="map" data-marker="<%= @marker.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
   </div>
</div>
